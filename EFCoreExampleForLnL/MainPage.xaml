<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EFCoreExampleForLnL.ViewModels"
             xmlns:models="clr-namespace:EFCoreExampleForLnL.Models"
             x:Class="EFCoreExampleForLnL.MainPage"
             x:DataType="viewmodels:MainPageViewModel"
             Title="EF Core 9 Product Catalog">

    <Grid RowDefinitions="Auto,*" Padding="15">
        <!-- Filter Section -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,15">
            <Label Text="Filter Products"
                   FontSize="18"
                   FontAttributes="Bold" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="By Customer:" FontSize="14" />
                    <Picker ItemsSource="{Binding Customers}"
                            SelectedItem="{Binding SelectedCustomer}"
                            ItemDisplayBinding="{Binding Name}"
                            Title="Select Customer" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1">
                    <Label Text="By Address:" FontSize="14" />
                    <Picker ItemsSource="{Binding Addresses}"
                            SelectedItem="{Binding SelectedAddress}"
                            Title="Select Address">
                        <Picker.ItemDisplayBinding>
                            <Binding Path="City" />
                        </Picker.ItemDisplayBinding>
                    </Picker>
                </VerticalStackLayout>
            </Grid>

            <Label Text="{Binding Products.Count, StringFormat='Showing {0} products'}"
                   FontSize="12"
                   TextColor="Gray" />
        </VerticalStackLayout>

        <!-- Products List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Products}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Border Stroke="LightGray"
                            StrokeThickness="1"
                            Padding="15"
                            Margin="0,0,0,10"
                            StrokeShape="RoundRectangle 8">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="5">
                            <Label Grid.Row="0"
                                   Text="{Binding Name}"
                                   FontSize="16"
                                   FontAttributes="Bold" />

                            <Label Grid.Row="1"
                                   Text="{Binding Description}"
                                   FontSize="14"
                                   TextColor="Gray" />

                            <Label Grid.Row="2"
                                   Text="{Binding ProductGuid, StringFormat='GUID: {0}'}"
                                   FontSize="12"
                                   TextColor="DimGray"
                                   FontFamily="Consolas" />

                            <HorizontalStackLayout Grid.Row="3" Spacing="10">
                                <Label Text="{Binding Customer.Name, StringFormat='Customer: {0}'}"
                                       FontSize="12"
                                       TextColor="DarkBlue" />
                                <Label Text="{Binding Customer.Address.City, StringFormat='({0})'}"
                                       FontSize="12"
                                       TextColor="DarkGreen"
                                       IsVisible="{Binding Customer.Address, Converter={StaticResource IsNotNullConverter}}" />
                                <Label Text="(No Address)"
                                       FontSize="12"
                                       TextColor="Orange"
                                       IsVisible="{Binding Customer.Address, Converter={StaticResource IsNullConverter}}" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No products found"
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                    <Label Text="Try adjusting your filters"
                           FontSize="14"
                           TextColor="LightGray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>
